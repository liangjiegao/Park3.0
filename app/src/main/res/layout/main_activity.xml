<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f9f9f9"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            >
            <ImageView
                android:id="@+id/iv_open_drawer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/user"
                android:scaleType="fitXY"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/et_seek_park"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                />
            <ImageView
                android:id="@+id/seek_park"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/loc"
                android:scaleType="fitXY"
                android:layout_toEndOf="@+id/et_seek_park"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/navigation"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toEndOf="@+id/seek_park"
                android:layout_marginStart="5dp"
                android:src="@mipmap/navigation"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <com.amap.api.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.amap.api.maps.MapView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_menu"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="#000"
        android:layout_gravity="left"
        >

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>
